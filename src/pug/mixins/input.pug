mixin Input(id, name, placeholder, required=true )
  .input-box&attributes(attributes)
    input.input-box__input(
      id= id,
      required= required,
      name= name,
      type="text",
      placeholder= placeholder,
      autocomplete="off"
    )
    label.input-box__label= placeholder

    span.input-box__error
      | Текст ошибки
    span.input-box__tooltip
      | Обязательное поле для заполнения
    button.input-box__clear(type="button")
      +icon-mono('clear')
