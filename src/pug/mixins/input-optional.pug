mixin Input-optional(id, name, placeholder, tooltipText, required=false, pattern=false)
  .input-box.input-box--optional&attributes(attributes)
    input.input-box__input(
      id= id,
      required= required,
      name= name,
      type="text",
      placeholder= placeholder,
      autocomplete="off",
      pattern=pattern
    )
    label.input-box__label= placeholder

    span.input-box__tooltip= tooltipText

    button.input-box__clear(tabindex="0", type="button")
      +icon-mono('clear')
