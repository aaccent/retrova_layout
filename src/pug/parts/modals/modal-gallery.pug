.modal__container(data-target="modal-gallery")
  .modal__content.modal-gallery
    .modal-gallery__header
      .site-container
        a.logo(href="/")
          +icon-mono('logo')

        button.modal-search__close.modal-close(type="button")
          +icon-mono('close-big')

    .modal-gallery__gallery.gallery
      .site-container
        .gallery__body
          .gallery__thumbs.thumbs
            ul.thumbs__list
              li.thumbs__item
                a.thumbs__button(href="#picture-1")
                  +picture('products/pic-9.jpg', 'retrova product image')
              li.thumbs__item
                a.thumbs__button(href="#picture-2")
                  +picture('products/pic-91.jpg', 'retrova product image')
              li.thumbs__item
                a.thumbs__button(href="#picture-3")
                  +picture('products/pic-92.jpg', 'retrova product image')
              li.thumbs__item
                a.thumbs__button(href="#picture-4")
                  +picture('products/pic-93.jpg', 'retrova product image')

          .gallery__list-wrapper
            ul.gallery__list
              li.gallery__item
                article.gallery__article#picture-1
                  +picture('products/pic-9.jpg', 'retrova product image')
              li.gallery__item
                article.gallery__article#picture-2
                  +picture('products/pic-91.jpg', 'retrova product image')
              li.gallery__item
                article.gallery__article#picture-3
                  +picture('products/pic-92.jpg', 'retrova product image')
