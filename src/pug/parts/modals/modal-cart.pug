.modal__container(data-target="modal-cart")
  .modal__content.modal-locate-list__content.modal-cart__content
    .modal-locate-list__head
      .modal-locate-list__title
        .modal-locate-list__cart-title
          | корзина
          span.modal-locate-list__cart-counter
            | 3
      button.modal-locate-list__close.modal-close(type="button")
        +icon-mono('close-big')

    // .modal-locate-list__body.modal-cart__body.modal-cart__body--full
    .modal-locate-list__body.modal-cart__body
      .modal-cart__cart-content.modal-cart__cart-content--full
        ul.modal-cart__products
          li.modal-cart__product.cart-product(data-id="")
            .cart-product__body
              .cart-product__image
                +picture('products/pic-1.jpg', 'retrova cart product image')

              .cart-product__control
                .cart-product__heading
                  span.cart-product__name Брюки джинсовые

                  .cart-product__params.popup-cart__params
                    span.popup-cart__params-solded Нет в наличии
                    span.popup-cart__params-size
                      | XS
                    span.popup-cart__devider
                      | /
                    span.popup-cart__params-size
                      | белый

                  .cart-product__counter.counter-panel
                    button.counter-panel__button.counter-panel__button--minus(type="button")
                      +icon-mono('minus')
                    input.counter-panel__input(
                      type="number",
                      name="counter-panel-value",
                      disabled,
                      value="1"
                    )
                    button.counter-panel__button.counter-panel__button--plus(type="button")
                      +icon-mono('plus')

                button.cart-product__delete
                  +icon-mono('close-big')

                .cart-product__footer
                  .cart-product__bonus.bonus
                    span.bonus__icon
                      +icon-multi('bonus')

                    .bonus__info
                      span.bonus__value 32
                      span.bonus__text бонуса
                      span.bonus__dot .


                  .cart-product__prices.about-product__prices.about-product__prices--sale
                    span.about-product__price
                      | 25 000
                    span.about-product__price.about-product__price--old
                      | 32 000

