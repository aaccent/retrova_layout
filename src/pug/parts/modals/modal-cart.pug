        // .modal-cart__order.order-panel
        .modal-cart__order.order-panel.order-panel--with-discount
          .order-panel__up
            .order-panel__promocode
              +Promocode('promo-code-1', 'promo-code-1', 'промокод')

            .order-panel__prices
              .order-panel__price.order-panel__price--discount
                span скидка
                h6  32 000₽
              .order-panel__price.order-panel__price--final
                span итого
                h6  50 000₽

          .order-panel__down
            a.order-panel__link.large-btn(href="#")
              span.large-btn__text
                | перейти к оформлению
              span.large-btn__loader
                +icon-mono('loader')

            span.order-panel__footnote
              | * Стоимость доставки рассчитывается при оформлении заказа

      .modal-cart__cart-content.modal-cart__cart-content--empty
        .modal-cart__empty
          .modal-cart__empty-texts
            h6 В корзине пока нет товаров
            span  Для выбора товаров перейдите в каталог

          a.large-btn(href="#")
            span.large-btn__text
              | перейти в каталог
            span.large-btn__loader
              +icon-mono('loader')

      .modal-cart__slider.mini-slider.js-mini-swiper
        .mini-slider__header
          span.mini-slider__title вы недавно смотрели
          .mini-slider__buttons
            button.mini-slider__button.mini-slider__button--prev(type="button")
              +icon-multi('arrow-right')
            button.mini-slider__button.mini-slider__button--next(type="button")
              +icon-multi('arrow-right')

        .mini-slider__swiper.swiper
          ul.mini-slider__swiper-wrapper.swiper-wrapper
            li.mini-slider__swiper-slide.swiper-slide
              a.product-card.product-card--mini.product-card--stock(data-article="")
                .product-card__body
                  .product-card__image
                    .product-card__picture
