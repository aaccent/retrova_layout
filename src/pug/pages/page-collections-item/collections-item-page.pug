    {picture: "collection/lifestyle/pic-1.jpg", id: "lifistyle-1", name: "Образ #1", value: "3", text: "товара"},
    {picture: "collection/lifestyle/pic-2.jpg", id: "lifistyle-2", name: "Образ #2", value: "4", text: "товара"},
    {picture: "collection/lifestyle/pic-3.jpg", id: "lifistyle-3", name: "Образ #3", value: "3", text: "товара"},
    {picture: "collection/lifestyle/pic-4.jpg", id: "lifistyle-4", name: "Образ #4", value: "4", text: "товара"},
    {picture: "collection/lifestyle/pic-5.jpg", id: "lifistyle-5", name: "Образ #5", value: "3", text: "товара"},
    {picture: "collection/lifestyle/pic-6.jpg", id: "lifistyle-6", name: "Образ #6", value: "4", text: "товара"},
    {picture: "collection/lifestyle/pic-7.jpg", id: "lifistyle-7", name: "Образ #7", value: "3", text: "товара"},
