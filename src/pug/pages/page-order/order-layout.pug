- const authInnerClass = authOuterClass ? authOuterClass : 'non-authenticated-user';
- const authorised = authorisedOuter ? authorisedOuter: false;

form.section.order-layout(data-need-validation, action="#", class=authInnerClass)
  .site-container
    .order-layout__body
      .order-layout__questionnaires.questionnaires.js-questionnaires
        ul.questionnaires__body
          li.questionnaires__step(class=( authorised ? 'questionnaires__step--active questionnaires__step--done' : '' ))
            span.questionnaires__count

            .questionnaires__head
              h6.questionnaires__title Введите личные данные

              .questionnaires__link-wrapper
                if authorised
                  button.questionnaires__login.questionnaires__auth(type="button") анастасия
                else
                  button.questionnaires__login.questionnaires__auth(type="button" data-path="modal-login") войти в лк
                a.questionnaires__login.questionnaires__edit.questionnaires__login--no-icon.js-edit-form.js-edit-form-first-step(href="#") изменить

            .questionnaires__window
              .questionnaires__form.form-questionnaires
                .form-questionnaires__body
                  .form-questionnaires__row
                    span.form-questionnaires__label личные данные

                    .form-questionnaires__inputs
                      .form-questionnaires__input
                        +Input-required('client-name', 'client-name', 'Имя*', 'Заполните имя', '')(class="js-processed-input", data-required)
                      .form-questionnaires__input
                        +Input-required('client-surname', 'client-surname', 'Фамилия*', 'Заполните фамилию', '')(class="js-processed-input", data-required)
                      .form-questionnaires__input
                        +Input-optional('client-patronymic', 'client-patronymic', 'Отчество', 'Требуется при доставке почтой')(class="js-processed-input", data-required)

                  .form-questionnaires__row
                    span.form-questionnaires__label Контакты

                    .form-questionnaires__inputs
                      .form-questionnaires__input
                        +Input-phone('client-phone', 'client-phone', '+7 (___)-___-__-__', 'Укажите телефон', '')(class="js-processed-input input-box--no-label", data-required)
                      .form-questionnaires__input
                        +Input-email('client-email', 'client-email', 'Почта', 'Укажите электронную почту', 'Пришлем чек по заказу')(data-required, class="input-box--optional js-processed-input")

              .questionnaires__ready.ready-inputs
                .ready-inputs__input-wrapper
                  input.ready-inputs__input(
                    name="ready-name"
                    type="text",
                    value="Смирнова Мария Александровна",
                    disabled,
                  )
                .ready-inputs__input-wrapper
                  input.ready-inputs__input(
                    name="ready-phone"
                    type="text",
                    value="+7 927-184-22-22",
                    disabled,
                  )
                .ready-inputs__input-wrapper
                  input.ready-inputs__input(
                    name="ready-email"
                    type="text",
                    value="smirnova@mail.ru",
                    disabled,
                  )

          li.questionnaires__step(class=( authorised ? 'questionnaires__step--active questionnaires__step--done' : '' ))
            span.questionnaires__count

            .questionnaires__head
              h6.questionnaires__title выберите способ доставки

              .questionnaires__link-wrapper
                button.questionnaires__login.questionnaires__login--location.questionnaires__loc(type="button", data-path="modal-locate-list") санкт-петербург
                a.questionnaires__login.questionnaires__edit.questionnaires__login--no-icon.js-edit-form.js-edit-form-second-step(href="#") изменить

            .questionnaires__window
              ul.questionnaires__form.questionnaires__shipping.shipping
                li.shipping__item
                  button.shipping__btn.shipping-btn(type="button", data-button="express-delivery", data-path="modal-delivery")
                    span.shipping-btn__title курьерская доставка
                    span.shipping-btn__info
                      span.shipping-btn__days
                      span.shipping-btn__price Бесплатно
                li.shipping__item
                  button.shipping__btn.shipping-btn(type="button", data-button="post-delivery", data-path="modal-del-point")
                    span.shipping-btn__title почтой россии или сдэк
                    span.shipping-btn__info
                      span.shipping-btn__days 1-3 дней,
                      span &nbsp;
                      span.shipping-btn__price 250 руб
                li.shipping__item
                  button.shipping__btn.shipping-btn(type="button", data-button="from-store", data-path="modal-pickup")
                    span.shipping-btn__title самовывоз из магазина
                    span.shipping-btn__info
                      span.shipping-btn__days 3 магазина,
                      span &nbsp;
                      span.shipping-btn__price сегодня

              .questionnaires__ready.ready-delivery
                span.ready-delivery__name Курьерская доставка
                span.ready-delivery__address Санкт-Петербург, пр-кт Маршала Блюхера, д. 21, кв. 120, пзд. 3, эт. 4
                span.ready-delivery__date Доставка ориентировочно 19-20 июня

          li.questionnaires__step(class=( authorised ? 'questionnaires__step--active questionnaires__step--done' : '' ))
            span.questionnaires__count

            .questionnaires__head
              h6.questionnaires__title способ оплаты

              .questionnaires__link-wrapper
                a.questionnaires__login.questionnaires__edit.questionnaires__login--no-icon.js-edit-form.js-edit-form-third-step(href="#") изменить

            .questionnaires__window.questionnaires__window--last-full
              .questionnaires__form.form-questionnaires.payment-method
                ul.payment-method__list
                  li.payment-method__item
                    .payment-method__radio
                      .payment-method__checkbox
                        +Radio-input('card-payment', 'payment-method-input',  'картой онлайн')(data-role="payment-method-radio", class="payment-method__label")

                        .payment-method__body
                        .payment-method__icon
                          +icon-multi('payment-1')

                  li.payment-method__item
                    .payment-method__radio
                      .payment-method__checkbox
                        +Radio-input('card-shares', 'payment-method-input', 'оплата долями')(data-role="payment-method-radio", class="payment-method__label")

                        .payment-method__body
                          p.payment-method__text
                            | Разделите сумму покупки на четыре платежа по
                            strong.payment-method__part-value &nbsp;12 500₽
                          button(type="button", data-path="modal-service") Подробнее

                        .payment-method__icon
                          object(data="./assets/images/tff-dark.svg" width="104" height="24")

                  li.payment-method__item
                    .payment-method__radio
                      .payment-method__checkbox
                        +Radio-input('card-parts', 'payment-method-input', 'оплата частями')(data-role="payment-method-radio", class="payment-method__label")

                        .payment-method__body
                          p.payment-method__text
                            | Разделите сумму покупки на четыре платежа по
                            strong.payment-method__part-value &nbsp;12 500₽
                          button(type="button", data-path="modal-service") Подробнее

                        .payment-method__icon
                          object(data="./assets/images/halva-dark.svg" width="102" height="24")

              .questionnaires__ready.ready-payment.ready-delivery
                .ready-payment__item.ready-payment__item--active(data-payments="card-payment")
                  .payment-method__icon
                    +icon-multi('payment-1')
                  span.ready-payment__text картой онлайн

                .ready-payment__item.ready-payment__item--parts(data-payments="card-shares")
                  .payment-method__icon
                    object(data="./assets/images/tff-dark.svg" width="104" height="24")

                  span.ready-payment__text оплата долями

                .ready-payment__item.ready-payment__item--parts(data-payments="card-parts")
                  .payment-method__icon
                    object(data="./assets/images/halva-dark.svg" width="102" height="24")

                  span.ready-payment__text оплата частями

              a.payment-method__link.large-btn(href="#", data-path="popup-order-success")
                span.large-btn__text
                  | оплатить 12 500₽
                span.large-btn__loader
                  +icon-mono('loader')

      article.order-layout__order-info.order-info(class=( authorised ? 'order-info--auth' : '' ))
        .order-info__head
          h4.order-info__title ваш заказ
            span.order-info__count 2

          a.order-info__edit.questionnaires__login.questionnaires__login--no-icon(href="#") изменить

        .order-info__body
          ul.order-info__images
            li.order-info__image
              +picture('products/pic-2.jpg', 'retrova product image')
            li.order-info__image
              +picture('products/pic-9.jpg', 'retrova product image')

          .order-info__promocode
            +Promocode('promocode-order','promocode-order','промокод')(class="js-promocode promocode--full-width")

          ul.order-info__list
            li.order-info__item
              span.order-info__key Cумма заказа
              span.order-info__value  50 000
            li.order-info__item
              span.order-info__key Доставка
              span.order-info__value  250
            li.order-info__item
              span.order-info__key Бонусы
              span.order-info__value.order-info__value--bonus 73

          .order-info__bonuses
            .order-info__bonuses-title
              h6 Списать бонусы:&nbsp;
              span.order-info__bonuses-value 73

            +Switcher('my-bonuses', 'my-bonuses')

        .order-info__footer
          span.order-info__title.order-info__result-text Итого:
          span.order-info__title.order-info__result-value 50 000

        button.order-info__make-order-btn.large-btn(type="button", data-path="popup-order-success")
          span.large-btn__text
            | оплатить 50 000₽
          span.large-btn__loader
            +icon-mono('loader')
