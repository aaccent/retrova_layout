                  object.bank-button__object.bank-button__object--dark(data="./assets/images/halva-dark.svg" width="42" height="10")

            .about-product__delivery
              ul.about-product__delivery-list
                li.about-product__delivery-item.delivery-item
                  span.delivery-item__title
                    | почтА россии:&nbsp;
                  button.dropdown-modal__expand-btn.expand-btn(type="button", data-path="modal-del-point")
                    span.expand-btn__text
