include ../data/config.pug
include ../mixins/**/*.pug

block variables

doctype html
html(lang=siteLang)
  head
    include ../parts/head.pug
  body(class=bodyClass)
    .page-wrapper
      block header
        include ../parts/header/header.pug

      block content

      block footer
        include ../parts/footer.pug

    .modal.modal-locate-list
      include ../parts/modals/modal-locate-list.pug

    include ../parts/service-footer.pug

  block scripts
    script(src="assets/js/main.js?v=" + siteVersion)
    script(src="assets/js/backend.js?v=" + siteVersion)
